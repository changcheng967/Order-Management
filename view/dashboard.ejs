<!DOCTYPE html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Management</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="dashboard-container">
        <h2>Order Management</h2>
        
        <div class="order-form">
            <h3>Create New Order</h3>
            <form action="/create-order" method="POST">
                <div class="input-field">
                    <label for="roblox_username">Roblox Username</label>
                    <input type="text" id="roblox_username" name="roblox_username" required>
                </div>
                <div class="input-field">
                    <label for="buyer_name">Buyer's Name</label>
                    <input type="text" id="buyer_name" name="buyer_name" required>
                </div>
                <div class="input-field">
                    <label for="item_wanted">Item Wanted</label>
                    <input type="text" id="item_wanted" name="item_wanted" required>
                </div>
                <div class="input-field">
                    <label for="total_price">Total Price (CAD)</label>
                    <input type="number" id="total_price" name="total_price" required>
                </div>
                <div class="input-field">
                    <label for="contract_signed">Contract Signed (Yes/No)</label>
                    <input type="text" id="contract_signed" name="contract_signed" required>
                </div>
                <div class="input-field">
                    <label for="delivery_status">Delivery Status</label>
                    <input type="text" id="delivery_status" name="delivery_status" required>
                </div>
                <div class="input-field">
                    <label for="estimated_delivery">Estimated Delivery</label>
                    <input type="text" id="estimated_delivery" name="estimated_delivery" required>
                </div>
                <button type="submit">Create Order</button>
            </form>
        </div>

        <div class="order-list">
            <h3>Order List</h3>
            <table>
                <thead>
                    <tr>
                        <th>Roblox Username</th>
                        <th>Buyer's Name</th>
                        <th>Item Wanted</th>
                        <th>Total Price</th>
                        <th>Paid Price</th>
                        <th>Contract Signed</th>
                        <th>Delivery Status</th>
                        <th>Estimated Delivery</th>
                    </tr>
                </thead>
                <tbody>
                    <% orders.forEach(order => { %>
                        <tr>
                            <td><%= order.roblox_username %></td>
                            <td><%= order.buyer_name %></td>
                            <td><%= order.item_wanted %></td>
                            <td><%= order.total_price %></td>
                            <td><%= order.paid_price %></td>
                            <td><%= order.contract_signed %></td>
                            <td><%= order.delivery_status %></td>
                            <td><%= order.estimated_delivery %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <a href="/logout">Logout</a>
    </div>
</body>
</html>
